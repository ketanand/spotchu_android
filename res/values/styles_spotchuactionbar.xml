<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Spotchuactionbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_spotchuactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Spotchuactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Spotchuactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Spotchuactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Spotchuactionbar</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Spotchuactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_spotchuactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_spotchuactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Spotchuactionbar</item>
        
        
    </style>

    <style name="ActionBar.Solid.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_spotchuactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_spotchuactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_spotchuactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Spotchuactionbar</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="ActionBar.Transparent.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_spotchuactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Spotchuactionbar</item>
    </style>

    <style name="PopupMenu.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_spotchuactionbar</item>	
    </style>

    <style name="DropDownListView.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_spotchuactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_spotchuactionbar</item>
    </style>

    <style name="DropDownNav.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_spotchuactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_spotchuactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_spotchuactionbar</item>
    </style>
    
    <style name="ProgressBar.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_spotchuactionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Spotchuactionbar" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_spotchuactionbar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Spotchuactionbar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Spotchuactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Spotchuactionbar</item>
    </style>

</resources>